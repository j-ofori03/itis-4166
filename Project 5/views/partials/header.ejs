<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Wave Creations - Header</title>
</head>
<body>
    <header>
        <a href="/" class="logo">
            <img src="/images/wave-creations-logo.png" alt="Wave Creations Logo" />
        </a>
        <div class="search-container">
            <form action="/items" method="GET">
                <input type="text" name="search" class="search-bar" placeholder="Search..." required>
                <button type="submit" class="search-button">
                    <img src="/images/icons/search_icon.png" alt="Search Icon" class="search-icon">
                </button>
            </form>
        </div>             
        <nav>
            <% if (user) { %>
                <a href="/items">Browse</a>
                <a href="/items/new">Sell</a>
                <a href="/users/profile">My Account</a>
                <a href="/users/logout">Log Out</a>
            <% } else { %>
                <a href="/items">Browse</a>
                <a href="/items/new">Sell</a>
                <a href="/users/signup">Sign Up</a>
                <a href="/users/login">Login</a>
            <% } %>
        </nav>
    </header>
</body>

    <!-- displahy flash messages -->
    <% if (errorMessages && errorMessages.length > 0) { %>
        <% errorMessages.forEach(message => { %>
            <div class="error">
                <%= message %>
            </div>
        <% }); %>
    <% } %>

    <% if (successMessages && successMessages.length > 0) { %>
        <% successMessages.forEach(message => { %>
            <div class="success">
                <%= message %>
            </div>
        <% }); %>
    <% } %>
</html>

